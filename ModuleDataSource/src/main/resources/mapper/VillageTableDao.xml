<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cwj.datasource.mysql.dao.VillageTableDao">

    <resultMap id="BaseResultMap" type="com.cwj.datasource.mysql.entity.VillageTable">
        <!--@Table village_table-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="villageName" column="village_name" jdbcType="VARCHAR"/>
        <result property="villageCode" column="village_code" jdbcType="VARCHAR"/>
        <result property="townCode" column="town_code" jdbcType="VARCHAR"/>
        <result property="countyCode" column="county_code" jdbcType="VARCHAR"/>
        <result property="cityCode" column="city_code" jdbcType="VARCHAR"/>
        <result property="provinceCode" column="province_code" jdbcType="VARCHAR"/>
        <result property="grade" column="grade" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, village_name, village_code, town_code, county_code, city_code, province_code, grade
        from area_database.village_table
        where village_code = #{villageCode}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, village_name, village_code, town_code, county_code, city_code, province_code, grade
        from area_database.village_table
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, village_name, village_code, town_code, county_code, city_code, province_code, grade
        from area_database.village_table
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="villageName != null and villageName != ''">
                and village_name = #{villageName}
            </if>
            <if test="villageCode != null and villageCode != ''">
                and village_code = #{villageCode}
            </if>
            <if test="townCode != null and townCode != ''">
                and town_code = #{townCode}
            </if>
            <if test="countyCode != null and countyCode != ''">
                and county_code = #{countyCode}
            </if>
            <if test="cityCode != null and cityCode != ''">
                and city_code = #{cityCode}
            </if>
            <if test="provinceCode != null and provinceCode != ''">
                and province_code = #{provinceCode}
            </if>
            <if test="grade != null and grade != ''">
                and grade = #{grade}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="villageCode" useGeneratedKeys="true">
        insert into area_database.village_table(id, village_name, town_code, county_code, city_code, province_code, grade)
        values (#{id}, #{villageName}, #{townCode}, #{countyCode}, #{cityCode}, #{provinceCode}, #{grade})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update area_database.village_table
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="villageName != null and villageName != ''">
                village_name = #{villageName},
            </if>
            <if test="townCode != null and townCode != ''">
                town_code = #{townCode},
            </if>
            <if test="countyCode != null and countyCode != ''">
                county_code = #{countyCode},
            </if>
            <if test="cityCode != null and cityCode != ''">
                city_code = #{cityCode},
            </if>
            <if test="provinceCode != null and provinceCode != ''">
                province_code = #{provinceCode},
            </if>
            <if test="grade != null and grade != ''">
                grade = #{grade},
            </if>
        </set>
        where village_code = #{villageCode}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from area_database.village_table where village_code = #{villageCode}
    </delete>

</mapper>