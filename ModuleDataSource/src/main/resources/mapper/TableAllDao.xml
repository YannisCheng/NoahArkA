<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cwj.datasource.mysql.dao.TableAllDao">

    <resultMap id="BaseResultMap" type="com.cwj.datasource.mysql.entity.TableAll">
        <!--@Table table_all-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="stuId" column="stu_id" jdbcType="VARCHAR"/>
        <result property="idcardStu" column="idcard_stu" jdbcType="VARCHAR"/>
        <result property="nameStu" column="name_stu" jdbcType="VARCHAR"/>
        <result property="nationStu" column="nation_stu" jdbcType="VARCHAR"/>
        <result property="sexStu" column="sex_stu" jdbcType="VARCHAR"/>
        <result property="date" column="date" jdbcType="VARCHAR"/>
        <result property="height" column="height" jdbcType="VARCHAR"/>
        <result property="weight" column="weight" jdbcType="VARCHAR"/>
        <result property="classId" column="class_id" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="idAll" column="id_all" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, stu_id, idcard_stu, name_stu, nation_stu, sex_stu, date, height, weight, class_id, address, id_all
        from 49_class_database.table_all
        where stu_id = #{stuId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, stu_id, idcard_stu, name_stu, nation_stu, sex_stu, date, height, weight, class_id, address, id_all
        from 49_class_database.table_all
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, stu_id, idcard_stu, name_stu, nation_stu, sex_stu, date, height, weight, class_id, address, id_all
        from 49_class_database.table_all
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="stuId != null and stuId != ''">
                and stu_id = #{stuId}
            </if>
            <if test="idcardStu != null and idcardStu != ''">
                and idcard_stu = #{idcardStu}
            </if>
            <if test="nameStu != null and nameStu != ''">
                and name_stu = #{nameStu}
            </if>
            <if test="nationStu != null and nationStu != ''">
                and nation_stu = #{nationStu}
            </if>
            <if test="sexStu != null and sexStu != ''">
                and sex_stu = #{sexStu}
            </if>
            <if test="date != null and date != ''">
                and date = #{date}
            </if>
            <if test="height != null and height != ''">
                and height = #{height}
            </if>
            <if test="weight != null and weight != ''">
                and weight = #{weight}
            </if>
            <if test="classId != null and classId != ''">
                and class_id = #{classId}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="idAll != null">
                and id_all = #{idAll}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="stuId" useGeneratedKeys="true">
        insert into 49_class_database.table_all(id, name_stu, nation_stu, sex_stu, date, height, weight, class_id, address)
        values (#{id}, #{nameStu}, #{nationStu}, #{sexStu}, #{date}, #{height}, #{weight}, #{classId}, #{address})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update 49_class_database.table_all
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="nameStu != null and nameStu != ''">
                name_stu = #{nameStu},
            </if>
            <if test="nationStu != null and nationStu != ''">
                nation_stu = #{nationStu},
            </if>
            <if test="sexStu != null and sexStu != ''">
                sex_stu = #{sexStu},
            </if>
            <if test="date != null and date != ''">
                date = #{date},
            </if>
            <if test="height != null and height != ''">
                height = #{height},
            </if>
            <if test="weight != null and weight != ''">
                weight = #{weight},
            </if>
            <if test="classId != null and classId != ''">
                class_id = #{classId},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
        </set>
        where stu_id = #{stuId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from 49_class_database.table_all where stu_id = #{stuId}
    </delete>

</mapper>