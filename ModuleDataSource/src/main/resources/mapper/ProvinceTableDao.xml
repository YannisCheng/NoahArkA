<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cwj.datasource.mysql.dao.ProvinceTableDao">

    <resultMap id="BaseResultMap" type="com.cwj.datasource.mysql.entity.ProvinceTable">
        <!--@Table province_table-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="provinceName" column="province_name" jdbcType="VARCHAR"/>
        <result property="provinceCode" column="province_code" jdbcType="VARCHAR"/>
        <result property="grade" column="grade" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, province_name, province_code, grade
        from area_database.province_table
        where province_code = #{provinceCode}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, province_name, province_code, grade
        from area_database.province_table
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, province_name, province_code, grade
        from area_database.province_table
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="provinceName != null and provinceName != ''">
                and province_name = #{provinceName}
            </if>
            <if test="provinceCode != null and provinceCode != ''">
                and province_code = #{provinceCode}
            </if>
            <if test="grade != null and grade != ''">
                and grade = #{grade}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="provinceCode" useGeneratedKeys="true">
        insert into area_database.province_table(id, province_name, grade)
        values (#{id}, #{provinceName}, #{grade})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update area_database.province_table
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="provinceName != null and provinceName != ''">
                province_name = #{provinceName},
            </if>
            <if test="grade != null and grade != ''">
                grade = #{grade},
            </if>
        </set>
        where province_code = #{provinceCode}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from area_database.province_table where province_code = #{provinceCode}
    </delete>

</mapper>